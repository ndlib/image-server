{
    "family": "ImageService",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "ImageService",
            "image": "mitlibraries/cantaloupe",
            "portMappings": [
                {
                    "containerPort": 8182,
                    "hostPort": 8182,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "mountPoints": [
                {
                    "sourceVolume": "ImageVolume",
                    "containerPath": "/imageroot",
                    "readOnly": true
                }
            ],
            "readonlyRootFilesystem": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                   "awslogs-group" : "/ecs/image-service",
                   "awslogs-region": "<region>",
                   "awslogs-stream-prefix": "image-service"
                }
            }
        }
    ],
    "volumes": [
        {
            "name": "ImageVolume",
            "host": {}
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
   "cpu": "256",
   "executionRoleArn": "arn:aws:iam::<accountid>:role/ecsTaskExecutionRole",
   "memory": "512"
}
